<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="public/stylesheets/main.css"> <!-- load fontawesome -->

    <style>
        body        { padding-top:80px; }
    </style>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-google-maps/2.2.1/angular-google-maps.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular-route.js"></script>

</head>

<body ng-app="lost-found">

<div class="container">
    <div class="jumbotron text-center" ng-controller="HomeController">
        <h1><span class="fa fa-lock"></span> {{ title }}</h1>

        <p>Login or Register with:</p>

        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>

    </div>

</div>
<div id="foundMap" ng-controller="MapController">
  <ui-gmap-google-map ng-if="showMap" center="map.center" zoom="map.zoom" refresh="showMap">
    <ui-gmap-markers models="markers"  coords="'self'" click="onClick">
      <ui-gmap-windows show="show">
        <div ng-non-bindable>{{desc}}</div>
      </ui-gmap-windows>
    </ui-gmap-markers>
  </ui-gmap-google-map>
</div>
<script src="angular/app.js"></script>
<script src="angular/controllers/mapController.js"></script>
<script src="angular/controllers/homeController.js"></script>
</body>
</html>
